package home

import "github.com/eeroleppalehto/go_gallery/views/layout"

templ Show() {
	<div class="flex flex-col items-center justify-center h-screen text-zinc-200 gap-4">
		<h1 class="font-semibold text-8xl font-serif tracking-tight text-center">
			GOLLERY
		</h1>
		<p class="text-3xl max-w-xl text-center leading-10">
			The photograph gallery implemented in <b>Go</b>, <b>HTMX</b> and
			<b>Tailwind CSS</b>
		</p>
	</div>
}

templ ShowInit() {
	@layout.Base() {
		@Show()
	}
}
